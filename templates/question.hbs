<h1>{{title}}</h1>
<h4><span class="green">By:</span> {{author}}</h4>

{{#if isEditing}}


<form>
	<div class="form-group">
	<label for="title">Title</label>
		{{input id="title" class="form-control" value=title}}
	</div>

	<div class="form-group">
	<label for="author">Author</label>
		{{input id="author" class="form-control" value=author}}
	</div>

	<div class="form-group">
	<label for="description">Description</label>
		{{textarea id="description" rows="5" class="form-control" value=description}}
	</div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>
</form>

{{else}}


<p><span class="green">The big question:</span> {{description}}</p>
<button class="btn btn-primary" {{action 'edit'}}>Edit</button>
<button class="btn btn-danger" {{action 'delete'}}>Delete</button>

{{/if}}

<h4 class="green">Current Submitted Answers:</h4>

{{#each answers}}
	<p>{{text}}</p>
{{/each}}

<p>{{#link-to 'new-answer' this.id class="btn btn-primary"}}New Answer {{/link-to}}</p>

{{outlet}}
